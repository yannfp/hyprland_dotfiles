# dunstrc - Catppuccin Mocha theme
# Based on https://github.com/catppuccin/dunst
[global]
    ### Main settings ###

	# Makes the notification appear where the mouse currently is
    follow = mouse

    width = 250
    height = 100
    origin = bottom-center

    offset = 40x40
    scale = 0

    ### "Form of the Box" (Shape & Appearance) ###
    
    # This is the main setting for the rounded box shape
    corner_radius = 20
	border_size = 2

	alignment = center

    ### Padding and Spacing ###
    padding = 10
    horizontal_padding = 10
    
    ### Font ###
    font = JetBrainsMono Nerd Font 10
    
    # Path to icons
    icon_path = /usr/share/icons/Papirus/16x16/devices/:/usr/share/icons/Papirus/16x16/apps/:/usr/share/icons/Papirus/16x16/mimetypes/

    ### Sorting and Behavior ###
    sort = yes
    indicate_hidden = yes
    show_indicators = no
    word_wrap = yes
    
    ### Mouse Actions ###
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

	### Progress Bar Styling ###
	highlight = "#D1D1D1"
    progress_bar_height = 10
    
    progress_bar_corner_radius = 5
    
    progress_bar_frame_width = 1
    
    progress_bar_min_width = 150
    progress_bar_max_width = 210

# --- URGENCY (COLOR) SETTINGS ---
# These sections apply the Tokyo Night colors.

[urgency_low]
    background = "#A16DEEAA"
    foreground = "#FFFFFF"
    frame_color = "#A16DEEAA"
    timeout = 2

[urgency_normal]
    background = "#A16DEEAA"
    foreground = "#E0CFFF"
    frame_color = "#A16DEEAA"
    timeout = 2

[urgency_critical]
    background = "#f7768e"
    foreground = "#FFFFFF"
    frame_color = "#A16DEEAA"
    timeout = 5

[shortcuts]

    # Close one notification
    close = ctrl+space
    # Close all notifications
    close_all = ctrl+shift+space
